<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.jorge.clientapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.Ip"
            android:label="IP"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.SignUp"
            android:label="Sign Up"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.ProductDetails"
            android:label="Product Details"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.MainScreen"
            android:label="Main"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.ShopList"
            android:label="Shop List"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.QRCodeScreen"
            android:label="QR Code"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.PastTransactions"
            android:label="Past Transactions"
            android:screenOrientation="portrait" />
        <activity android:name=".activities.LogIn"></activity>
    </application>

</manifest>