<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.jorge.clientapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.LogIn">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.SignUp" />
        <activity
            android:name=".activities.ProductDetails"
            android:label="Detalhes do Produto"
            android:parentActivityName=".activities.MainScreen">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.jorge.clientapp.activities.MainScreen" />
        </activity>
        <activity android:name=".activities.MainScreen" />
        <activity android:name=".activities.ShopList"></activity>
    </application>

</manifest>